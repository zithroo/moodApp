#:import utils kivy.utils
<Button>
    color: (1,1,1,1)
    background_normal: ""
    background_color: utils.get_color_from_hex('#c0c0c0')
<Home>:
    name: 'home'
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 20
        Label:
            text: '''生活的壓力是否\n讓你喘不過氣呢?\n接下來就讓這App\n帶給你一些正能量吧!'''
            font_size: 28
            size_hint: (1, 0.8)
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex('#604700')
                Rectangle:
                    size: self.size
                    pos: self.pos
        BoxLayout:
            orientation: "vertical"
            Label:

            Button:
                text: "開始測驗"
                pos_hint: {'center_x': 0.5}
                size_hint: (0.5, 0.5)
                on_press: 
                    root.manager.current = 'question'
                    root.manager.transition.direction = 'left'
            Label:
<Question>:
    name: 'question'
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 30
        Label:
            id: name_question
            text:
            multiline: True
            font_size: 20
            size_hint: (1, 0.5)
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex('#604700')
                Rectangle:
                    size: self.size
                    pos: self.pos
        BoxLayout:
            orientation: "vertical"
            size: root.width, root.height
            padding: 10
            spacing: 10
            Button:
                id: answer_0
                text: "沒有經歷"
                pos_hint: {'center_x': 0.5}
                size_hint: (0.7, 0.3)
                on_press: root.get_answer(0)
            Button:
                id: answer_1
                text: "很少發生"
                pos_hint: {'center_x': 0.5}
                size_hint: (0.7, 0.3)
                on_press: root.get_answer(1)
            Button:
                id: answer_2
                text: "偶爾"
                pos_hint: {'center_x': 0.5}
                size_hint: (0.7, 0.3)
                on_press: root.get_answer(2)
            Button:
                id: answer_3
                text: "總是"
                pos_hint: {'center_x': 0.5}
                size_hint: (0.7, 0.3)
                on_press: root.get_answer(3)
            Button:
                id: send
                text: "下一題"
                pos_hint: {'center_x': 0.5}
                size_hint: (0.7, 0.3)
                on_press: root.submit()
<Result>:
    name: 'result'
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 30
        Label:
            text: "這是結果"
            font_size: 32
            size_hint: (1, 0.5)
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex('#604700')
                Rectangle:
                    size: self.size
                    pos: self.pos
        BoxLayout:
            orientation: "vertical"
            size: root.width, root.height
            padding: 10
            spacing: 10
            Label:
                id: name_result
                text: "說明語"
                font_size: 32
                size_hint: (1, 0.5)
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#604700')
                    Rectangle:
                        size: self.size
                        pos: self.pos
                
            Image:
                source: 'image/test_picture.jpg'
                allow_stretch: True
                keep_ratio: True
            Button:
                text: "再次測驗"
                pos_hint: {'center_x': 0.5}
                size_hint: (0.7, 0.1)
                on_press: 
                    root.manager.current = 'home'
                    root.manager.transition.direction = 'right'