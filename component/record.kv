<Record>:
    name: 'record'
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 30
        Label:
            text: "這是近期五次紀錄結果\n可以評估你的心情起伏喔"
            font_size: 32
            size_hint: (1, 0.5)
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex('#604700')
                Rectangle:
                    size: self.size
                    pos: self.pos
        BoxLayout:
            orientation: "vertical"
            size: root.width, root.height
            padding: 10
            spacing: 10
                
            Image:
                id: name_image
                source: './user/record.jpg'
                allow_stretch: True
                keep_ratio: True
            Button:
                text: "返回"
                pos_hint: {'center_x': 0.5}
                size_hint: (0.7, 0.1)
                on_press: 
                    root.manager.current = 'home'
                    root.manager.transition.direction = 'left'
                    