<Button>
    pos_hint: {'center_x': 0.5}
<Question>:
    name: 'question'
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 30
        Label:
            id: name_question
            text:
            multiline: True
            font_size: 20
            size_hint: (1, 0.5)
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex('#604700')
                Rectangle:
                    size: self.size
                    pos: self.pos
        BoxLayout:
            orientation: "vertical"
            size: root.width, root.height
            padding: 10
            spacing: 10
            Button:
                id: answer_0
                text: "沒有經歷"
                size_hint: (0.7, 0.5)
                on_press: root.get_answer(0)
            Button:
                id: answer_1
                text: "很少發生"
                size_hint: (0.7, 0.5)
                on_press: root.get_answer(1)
            Button:
                id: answer_2
                text: "偶爾"
                size_hint: (0.7, 0.5)
                on_press: root.get_answer(2)
            Button:
                id: answer_3
                text: "總是"
                size_hint: (0.7, 0.5)
                on_press: root.get_answer(3)
            GridLayout:
                cols: 2
                spacing: 10
                size_hint: (1, 0.5)
                Button:
                    id: previous
                    text: "回首頁"
                    size_hint: (0.7, 0.3)
                    on_press: root.goto_previous()
                Button:
                    id: send
                    text: "下一題"
                    size_hint: (0.7, 0.3)
                    on_press: 
                        root.submit()