<Result>:
    name: 'result'
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 30
        Label:
            text: "這是根據測驗結果所選擇的小語和圖片"
            font_size: 32
            size_hint: (1, 0.5)
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex('#3F5623')
                Rectangle:
                    size: self.size
                    pos: self.pos
        BoxLayout:
            orientation: "vertical"
            size: root.width, root.height
            padding: 10
            spacing: 10
            Label:
                id: name_result
                text: "說明語"
                font_size: 32
                size_hint: (1, 0.5)
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#3F5623')
                    Rectangle:
                        size: self.size
                        pos: self.pos
                
            Image:
                id: name_image
                source: 'image/test_picture.jpg'
                allow_stretch: True
                keep_ratio: True
            Button:
                text: "再次測驗"
                pos_hint: {'center_x': 0.5}
                size_hint: (0.7, 0.1)
                on_press: 
                    root.restart()
                    